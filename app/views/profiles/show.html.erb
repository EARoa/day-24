<h1><%= @user.username %>'s Profile</h1>
<h3>My Chirps</h3>

<div class="thoughts">

  <ul>
    <% @user.thoughts.each do |thought| %>
      <li class="thought">
        <%= thought.deep_thought %>
        <br/>
        On <%= time_ago_in_words thought.created_at %> by <%= thought.user.username %>
      </li>
    <% end %>
  </ul>

</div>
