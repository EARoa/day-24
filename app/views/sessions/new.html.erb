
<h1>Welcome to Chirp <%= image_tag("chirpsmall.png", :alt => "chirp logo")  %></h1>

<h3> Sign In </h3>

<%= form_tag sessions_path do %>

  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag "Sign In" %> or <%= link_to "Sign Up", signup_path %>
  </p>

<% end %>
